    <script>
        // Polyfill: soporte de $(...).modal(...) para Bootstrap 5 (evita errores en vistas antiguas)
        (function () {
            if (!window.jQuery || window.jQuery.fn.modal || !window.bootstrap || !window.bootstrap.Modal) return;

            window.jQuery.fn.modal = function (action) {
                return this.each(function () {
                    const instance = window.bootstrap.Modal.getOrCreateInstance(this);
                    if (action === "show") instance.show();
                    else if (action === "hide") instance.hide();
                    else if (action === "toggle") instance.toggle();
                });
            };
        })();
    </script>
